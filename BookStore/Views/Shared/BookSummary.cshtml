@{
}
@model Book
<tr>
    <td>@Model.Title</td>
    <td>@Model.AuthorFirst</td>
    <td>@Model.AuthorMiddle</td>
    <td>@Model.AuthorLast</td>
    <td>@Model.Publisher</td>
    <td>@Model.ISBN</td>
    <td>@Model.Class</td>
    <td>@Model.Cat</td>
    <td>@Model.Price</td>
    <td>@Model.PageNum</td>
    <td><form id="@Model.BookID" asp-page="/Cart" method="post">
    <input type="hidden" asp-for="BookID" />
    <input type="hidden" name="returnUrl"
           value="@ViewContext.HttpContext.Request.PathAndQuery()" />
    <span class="card-text p-1">
        <!--Maybe adjust this. not usre if model.title is right?-->
        @Model.Title
        <button type="submit"
                class="btn btn-success btn-sm pull-right" style="float:right">
            Add To Cart
        </button>
    </span>
</form></td>
</tr>