<!DOCTYPE html>
<html lang="en">
<head>
    <!--This is the layout page that all other pages inherit from-->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/Style.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        @*<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 navbar-default">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookStore</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>*@
        <div class="bg-dark text-white p-2">
            <div class="container-fluid">
                <div class="row">
                    <div class="col navbar-brand">Budget Amazon</div>
                    <div class="col-6 text-right">
                        <vc:cart-summary />
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="text-center">
        <h1 class="display-4">Welcome to Budget Amazon</h1><img width=50 height=25 src="~/amzn.jpg" />
        <p class="font-weight-bold">Your one-stop shop for buying books online for a price probably higher than what you can find on Amazon</p>
    </div>
    <!--This divides the site into columns to allow for a beautiful and proper displaying of the title, the table, and the category buttons-->
        <div class="container">
            <div class="row">
                <!--This is where the navigation menu for category comes in on the left two columns-->
                <div class="col-2">
                    <vc:navigation-menu />
                </div>
                <!--The right 10 columns will dipslay the database and everything else contained on the Index.cshtml page-->
                <div class="col-10">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>

        


    
            <!--This is where the body comes in from Index.html-->


            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2021 - BookStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            <!--This allows the Page Numbers to show up dynamically-->
            @RenderSection("Scripts", required: false)
</body>
</html>
